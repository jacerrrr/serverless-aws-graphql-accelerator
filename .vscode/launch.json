{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "address": "localhost",
      "port": 9229,
      "localRoot": "${workspaceRoot}/.webpack",
      "outFiles": ["${workspaceFolder}/.webpack/**/*.js"],
      "protocol": "inspector",
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceRoot}/node_modules/.bin/serverless",
      "args": ["offline", "start", "--stage=local"],
      "sourceMaps": true,
      "smartStep": true,
      "runtimeArgs": ["--lazy"],
      "outFiles": ["${workspaceFolder}/.webpack/**/*.js"],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "runtimeExecutable": "node",
      "env": {
        "NODE_ENV": "development"
      },
      "windows": {
        "program": "${workspaceRoot}\\node_modules\\.bin\\serverless"
      }
    },
    {
      "name": "Debug Unit Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/ts-node",
      "args": ["-r", "tsconfig-paths/register", "-P", "src/tsconfig.spec.json", "node_modules/.bin/jasmine"],
      "protocol": "inspector",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
